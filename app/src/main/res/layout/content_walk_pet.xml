        android:layout_marginTop="126dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="Miles Walked:"
        app:layout_constraintEnd_toStartOf="@+id/textView16"
